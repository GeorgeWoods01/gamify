<div class="container">
  <h1> Add new Student </h1>
  <div class="container-form">
    <%= simple_form_for [@classroom, @student] do |f| %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :date_of_birth %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Create", class: "btn btn-danger" %>
    <% end %>
</div>
