<h1> rewards</h1>
<%= link_to "Add reward", new_reward_path(@reward), class:"btn" %>
<div class="grid-container">
  <div class='student-cards'>
    <% @rewards.each do |reward| %>
      <div class="student-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path reward.photo.key, height: 300, crop: :fill %>')">
        <h2><strong><%= link_to reward.title, reward_path(reward), class:'link' %></strong></h2>
      </div>
    <% end %>
  </div>
</div>
