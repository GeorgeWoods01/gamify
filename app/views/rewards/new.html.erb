<div class="container">
  <h1> Add new Reward </h1>
  <div class="container-form">
    <%= simple_form_for [@reward] do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Create", class: "btn" %>
    <% end %>
  </div>
</div>
